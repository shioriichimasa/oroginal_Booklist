<!--newとeditで使う共通部品-->
<!--form_withを書くことでhtmlのformタグが自動で生成される-->
<div class="row">
  <div class="col-6">
   <%= form_with(model: book) do |f| %>
    <!--エラー表示-->
     <% if book.errors.any? %>
       <div id="error_explanation" class="alert alert-warning">
        <ul class="mb-0">
         <% book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
         <% end %>
       </ul>
       </div>
  <% end %>
  
  <div class="mb-3">
    <%= f.label :title, 'タイトル' %>
    <br>
    <%= f.text_field :title, :size=>"60"%>
    <br>
    <%= f.label :author, '作者' %>
    <br>
    <%= f.text_field :author, :size=>"60" %>
  </div>
  
  <div class="mb-3">
    <%= f.label :review, '感想(100文字以内)' %>
    <br>
    <%= f.text_area :review , :size=>"60x5"%>
  </div>

  <%= f.submit '登録' , class: 'btn btn-primary'%>
<% end %>
</div>
</div>
