<!--登録した本の一覧表示画面のView-->
<h1>読んだ本一覧</h1>
<!--検索フォーム-->
<%= search_form_for @q, url: search_books_path do |f| %>
  タイトル名で検索：
  <%= f.search_field :title_cont %>
  <%= f.submit '検索'%>
<% end %>

<!--booksの一覧をテーブル表示-->
<% if @books.any? %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th class="text-center">id</th>
        <th class="text-center">タイトル</th>
        <th class="text-center">作者</th>
        <th class="text-center">感想</th>
      </tr>
    </thead>
    <tbody>
  <!--登録した全ての本から1つづつ取り出す-->
  <% @books.each do |book| %>
  <tr>
    <td class="text-center"><%= link_to book.id, book %></td>
    <td class="text-center"><%= book.title %></td>
    <td class="text-center"><%= book.author %></td>
    <td><%= book.review %></td>
  </tr>
  <% end %>
      </tbody>
  </table>
<%== pagy_bootstrap_nav(@pagy) %>
 </div>
 <% end %>
<%= link_to '読んだ本を登録する', new_book_path, class: "btn btn-primary"%>




  
