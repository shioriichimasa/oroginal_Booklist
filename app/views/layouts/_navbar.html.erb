<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <div class="container-fluid ps-5 pe-5">
      <a class="navbar-brand" href="/">Booklist</a>
      <!-- 横幅が狭い時に出るハンバーガーボタン -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
          <span class="navbar-toggler-icon"></span>
        </button>
        
      <!-- メニュー項目 -->
      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <!--ログインしているかどうかでナビバーの画面項目を変える-->
        <% if logged_in? %>
          <ul class="navbar-nav">
            <!--可変のユーザー名にしたい。ログインしているユーザー名,横並びで綺麗に-->
            <li class="nav-item"><%= @current_user.name %></li>
            <li class="nav-item"><<%= link_to 'ログアウト', logout_path, method: :delete, class: 'nav-link' %></li>
          </ul>
       <% else %>
          <ul class="navbar-nav">
            <li class="nav-item"><%= link_to '新機会員登録', signup_path, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to 'ログイン', login_path, class: 'nav-link' %></li>
          </ul>
        <% end %>
        </div>
      </div>
    </nav>
</header>